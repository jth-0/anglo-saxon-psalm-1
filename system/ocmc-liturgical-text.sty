    \itSetPrimaryDomain{#1}{#2}{#3}%
    \IfStrEqCase{#1}{%
        {ara}{\arabicfont\setRTL}%
        {chu}{\slavonicfont}%
        {en}{%
            \ifbool{hyphenate}{\selectlanguage{english}}{}%
        }%
        {gr}{%
            \ifbool{hyphenate}{\selectlanguage{greek}}{}%
        }%
        {heb}{\hebrewfont\setRTL}%
        {rus}{}%
    }[\ifbool{hyphenate}{\selectlanguage{english}}{}]%
}

